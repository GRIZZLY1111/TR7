<Window x:Class="TRPO7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TRPO7"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="38"/>
            <RowDefinition Height="152"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="185"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" Width="310" Grid.Column="0" Grid.RowSpan="2" Grid.Row="0" Margin="5">
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <Label Content="Фамилия:"/>
                    <Label Content="Имя:"/>
                    <Label Content="Отчество:"/>
                    <Label Content="Специальность:"/>
                    <Label Content="Пароль:"/>
                    <Label Content="Подтверждение пароля:"/>
                    <Button Click="RegisterButton_Click" Content="Зарегистрироваться"/>
                </StackPanel>
                <StackPanel>
                    <TextBox x:Name="FirstNameTextBox" Margin="4" Width="150px"/>
                    <TextBox x:Name="LastNameTextBox" Margin="4" Width="150px"/>
                    <TextBox x:Name="MiddleNameTextBox" Margin="4" Width="150px"/>
                    <TextBox x:Name="SpecialisationTextBox" Margin="4" Width="150px"/>
                    <TextBox x:Name="PasswordTextBox" Margin="4" Width="150px"/>
                    <TextBox x:Name="ConfirmPasswordTextBox" Margin="4" Width="150px"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <Border Grid.Column="0" Grid.Row="2" BorderBrush="Black" BorderThickness="1" Width="310" Margin="5">
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <Label Content="Введите свой ID:"/>
                    <Label Content="Введите пароль:"/>
                    <Button Click="LoginButton_Click" Content="Войти"/>
                </StackPanel>
                <StackPanel>
                    <TextBox x:Name="LoginIdTextBox" Margin="4" Text="{Binding ID}" Width="200px"/>
                    <TextBox x:Name="LoginPasswordTextBox" Margin="4" Text="{Binding Password}" Width="200px"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <Border Grid.Column="0" Grid.Row="3" BorderBrush="Black" BorderThickness="1" Width="310" Margin="5">
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <TextBlock Text="Идентификатор:"/>
                    <TextBlock Text="Фамилия:"/>
                    <TextBlock Text="Имя:"/>
                    <TextBlock Text="Отчество:"/>
                    <TextBlock Text="Специальность:"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="{Binding CurrentDoctor.ID}"/>
                    <TextBlock Text="{Binding CurrentDoctor.LastName}"/>
                    <TextBlock Text="{Binding CurrentDoctor.Name}"/>
                    <TextBlock Text="{Binding CurrentDoctor.MiddleName}"/>
                    <TextBlock Text="{Binding CurrentDoctor.Specialisation}"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <Border Grid.Column="0" Grid.Row="4" BorderBrush="Black" BorderThickness="1" Margin="5" Grid.ColumnSpan="3">
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <TextBlock Text="Количество пользователей:"/>
                    <TextBlock Text="Количество пациентов:"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="{Binding KolvoUser}"/>
                    <TextBlock Text="{Binding KolvoPacient}"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <Border Grid.Column="1" Grid.Row="0" BorderBrush="Black" BorderThickness="1" Margin="5">
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <Label Content="Введите ID пациента:"/>
                </StackPanel>
                <StackPanel>
                    <TextBox Margin="4" Text="{Binding IDP}" Width="135px"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <Border Grid.Column="1" Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="5" Grid.RowSpan="3">
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <TextBlock Text="Количество пользователей:"/>
                    <TextBlock Text="Количество пациентов:"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="{Binding KolvoUser}"/>
                    <TextBlock Text="{Binding kolvoPacient}"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <Border Grid.Column="2" Grid.Row="0" BorderBrush="Black" BorderThickness="1" Margin="5" Grid.RowSpan="3">
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <TextBlock Text="Количество пользователей:"/>
                    <TextBlock Text="Количество пациентов:"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="{Binding KolvoUser}"/>
                    <TextBlock Text="{Binding kolvoPacient}"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <Border Grid.Column="2" Grid.Row="3" BorderBrush="Black" BorderThickness="1" Margin="5">
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <TextBlock Text="Количество пользователей:"/>
                    <TextBlock Text="Количество пациентов:"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="{Binding KolvoUser}"/>
                    <TextBlock Text="{Binding kolvoPacient}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
